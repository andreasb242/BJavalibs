<project name="MaskDocuConfig" basedir="." default="jar">
	<property name="build" value="build" />
	<property file="build.properties" />
	<tstamp>
		<format property="buildtime" pattern="dd-MMM-yy HH:mm:ss" />
	</tstamp>

	<echo message="Build started: ${buildtime}" />

	<target name="clean">
		<delete dir="${build}" />
	</target>

	<target name="init" depends="clean">
		<mkdir dir="${build}" />
	</target>

	<target name="compile" depends="init">
		<!-- Compile the java code -->
		<javac debug="true" srcdir="src" destdir="${build}" encoding="UTF-8" />
	</target>

	<target name="jar" depends="compile">
		<copy todir="${build}">
			<fileset dir="src">
				<include name="**/*.png" />
				<include name="**/*.gif" />
				<include name="**/*.jpg" />
				<include name="**/*.html" />
				<include name="**/*.properties" />
			</fileset>
		</copy>


		<!-- Build the jar file -->
		<jar basedir="${build}" destfile="${build}/B-Lib.jar" />

	</target>
</project>